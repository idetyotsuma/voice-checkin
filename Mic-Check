<!DOCTYPE html>
<html>
<body>
<button id="mic">ğŸ¤</button>
<input id="out" />

<script>
document.getElementById("mic").onclick = () => {
  const r = new webkitSpeechRecognition();
  r.lang = "ja-JP";
  r.onresult = e => {
    document.getElementById("out").value = e.results[0][0].transcript;
  };
  r.start();
};
</script>
</body>
</html>
